<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  Start : Your code should be within this block -->

    <ListView
        android:id="@+id/msg_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#0000" >
    </ListView>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME TO"
        android:textSize="36sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="TAKE PART IN OUR SURVEY!"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:text="Before we start, here are things you should know:"
        android:textSize="22sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="28dp"
        />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv3"
        android:text="-Please be honest when making your choice"
        android:textSize="18sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:text="-We are just doing a reserch so you don't have to fake your information"
        android:textSize="18sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="25dp"
        />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:text="-Please follow the step we designed for you and don't skip any questions"
        android:textSize="18sp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="25dp"
        />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="I accept these requests."
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt"
        android:layout_below="@+id/cb"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/colorPrimary"
        android:text="LET'S START!"
        android:textColor="#000000"
        android:textSize="20sp"
        android:onClick="clickWel"
        android:textFontWeight="1"
        android:layout_marginBottom="20dp"
        />
    </LinearLayout>>
    <!-- END    : Your code should be within this block -->
</RelativeLayout>